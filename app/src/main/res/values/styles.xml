<resources>
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:textColorPrimary">@color/grey_545454</item>
		<item name="android:textColor">@color/grey_545454</item>
		<item name="android:windowBackground">@color/grey_eeeeee</item>
		<item name="actionOverflowButtonStyle">@style/OverFlow</item>
	</style>

	<style name="AppTheme.FullScreen">
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="AppTheme.Explore">
		<item name="colorPrimary">@color/explorePrimary</item>
		<item name="colorPrimaryDark">@color/explorePrimaryDark</item>
	</style>

	<style name="EditText" parent="Widget.AppCompat.EditText">
		<item name="android:background">@drawable/et_background</item>
		<item name="android:paddingBottom">@dimen/thick</item>
		<item name="android:paddingEnd">@dimen/narrow</item>
		<item name="android:paddingStart">@dimen/narrow</item>
		<item name="android:layout_marginStart">@dimen/big</item>
		<item name="android:layout_marginEnd">@dimen/big</item>
		<item name="android:layout_marginTop">@dimen/dimen_28</item>
		<item name="android:textSize">@dimen/text_medium</item>
		<item name="fontPath">fonts/lato-regular.ttf</item>
		<item name="android:layout_marginBottom">@dimen/dimen_28</item>
		<item name="android:textColorHint">@color/grey_aaaaaa</item>
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="EditText.PickUp">
		<item name="android:paddingBottom">@dimen/narrow</item>
		<item name="android:paddingEnd">@dimen/narrow</item>
		<item name="android:paddingStart">@dimen/narrow</item>
		<item name="android:layout_marginStart">0dp</item>
		<item name="android:layout_marginEnd">0dp</item>
		<item name="android:lines">1</item>
		<item name="android:layout_marginTop">@dimen/narrow</item>
		<item name="android:textSize">@dimen/text_medium</item>
		<item name="android:textColorHint">@color/grey_848484</item>
		<item name="fontPath">fonts/lato-regular.ttf</item>
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="EditText_BankDetails" parent="Widget.AppCompat.EditText">
		<item name="fontPath">fonts/lato-regular.ttf</item>
		<item name="android:background">@drawable/et_background_bank_details</item>
		<item name="android:paddingBottom">@dimen/small</item>
		<item name="android:layout_marginStart">@dimen/thick</item>
		<item name="android:layout_marginEnd">@dimen/thick</item>
		<item name="android:layout_marginTop">@dimen/dimen_32</item>
		<item name="android:lines">1</item>
		<item name="android:textSize">@dimen/text_regular</item>
		<item name="android:textColorHint">@color/grey_848484</item>
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="AppTheme.Pickup">
		<item name="colorPrimary">@color/green</item>
		<item name="colorPrimaryDark">@color/darkGreen</item>
		<item name="colorAccent">@color/green</item>
		<item name="android:textColor">@color/grey_848484</item>
	</style>

	<style name="AppTheme.BankDetails">
		<item name="colorPrimary">@color/walletPrimary</item>
		<item name="colorPrimaryDark">@color/walletPrimaryDark</item>
		<item name="colorAccent">@color/walletPrimary</item>
		<item name="android:textColor">@color/grey_848484</item>
	</style>

	<style name="AppTheme.RateCard">
		<item name="colorPrimary">@color/ratePrimary</item>
		<item name="colorPrimaryDark">@color/ratePrimaryDark</item>
		<item name="colorAccent">@color/ratePrimary</item>
	</style>

	<style name="bottom_navigation">
		<item name="android:padding">@dimen/narrow</item>
		<item name="android:gravity">center</item>
		<item name="android:clickable">true</item>
		<item name="fontPath">fonts/lato-regular.ttf</item>
		<item name="android:textColor">@color/grey_545454</item>
		<item name="android:textSize">@dimen/text_tiny</item>
		<item name="android:drawablePadding">@dimen/thin</item>
	</style>

	<style name="explore_items">
		<item name="android:paddingBottom">@dimen/standard</item>
		<item name="android:gravity">center</item>
		<item name="android:clickable">true</item>
		<item name="android:textColor">@color/grey_2d2d2d</item>
		<item name="android:textSize">@dimen/text_regular</item>
		<item name="android:drawablePadding">@dimen/standard</item>
		<item name="android:background">@drawable/underline</item>
	</style>

	<style name="AppTheme.AppBarOverlay"
		parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="ToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textAllCaps">false</item>
		<item name="android:textSize">@dimen/text_medium</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="AppTheme.PopupOverlay"
		parent="ThemeOverlay.AppCompat.Light"/>

	<style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
		<item name="android:src">@drawable/ic_menu_white_18dp</item>
	</style>


</resources>
