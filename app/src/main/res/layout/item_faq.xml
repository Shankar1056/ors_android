<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginEnd="@dimen/standard"
	android:layout_marginStart="@dimen/standard"
	android:layout_marginTop="@dimen/thick"
	app:cardBackgroundColor="@color/white"
	tools:ignore="MissingPrefix">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:id="@+id/tv_question"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:drawableEnd="@drawable/ic_arrow_down_grey_15dp"
			android:drawablePadding="@dimen/thick"
			android:padding="@dimen/thick"
			android:textColor="@color/black"
			android:textSize="@dimen/text_regular"
			tools:text="Why Choose ORS"/>

		<TextView
			android:id="@+id/tv_answer"
			fontPath="fonts/lato-regular.ttf"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/thick"
			android:textSize="@dimen/text_small"
			tools:text="Lorem ipsum is simply dummy text of the printing and type"/>
	</LinearLayout>
</android.support.v7.widget.CardView>