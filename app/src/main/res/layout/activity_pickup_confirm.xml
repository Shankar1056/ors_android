<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="online.ors.oldraddisold.activity.PickupConfirmActivity"
	tools:ignore="MissingPrefix">

	<include layout="@layout/toolbar"/>

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/narrow">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<android.support.v7.widget.RecyclerView
				android:id="@+id/rv_items"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/standard"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/narrow"
					android:text="@string/schedule_date"
					android:textColor="@color/grey_545454"/>

				<TextView
					android:id="@+id/tv_schedule_date"
					fontPath="fonts/lato-regular.ttf"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="end"
					android:padding="@dimen/narrow"
					android:textColor="@color/grey_545454"
					tools:text="30 MAR 2017"/>
			</LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:background="@color/grey_e0e0e0"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/standard"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/narrow"
					android:text="@string/schedule_time"
					android:textColor="@color/grey_545454"/>

				<TextView
					android:id="@+id/tv_schedule_time"
					fontPath="fonts/lato-regular.ttf"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="end"
					android:padding="@dimen/narrow"
					android:textColor="@color/grey_545454"
					tools:text="10AM To 11 PM"/>
			</LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:background="@color/grey_e0e0e0"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/standard"
				android:gravity="bottom"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/narrow"
					android:text="@string/address"
					android:textColor="@color/grey_545454"/>

				<TextView
					android:id="@+id/tv_schedule_address"
					fontPath="fonts/lato-regular.ttf"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="end"
					android:padding="@dimen/narrow"
					android:textColor="@color/grey_545454"
					tools:text="Spotsoon, Ashwathnagar, Bangalore, 560094"/>
			</LinearLayout>
		</LinearLayout>
	</android.support.v7.widget.CardView>

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginBottom="@dimen/narrow"
		android:layout_marginEnd="@dimen/narrow"
		android:layout_marginStart="@dimen/narrow"
		android:layout_weight="1">

		<android.support.v7.widget.AppCompatEditText
			android:id="@+id/et_note"
			fontPath="fonts/lato-regular.ttf"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/white"
			android:gravity="top"
			android:hint="@string/remarks"
			android:inputType="textMultiLine|textCapSentences"
			android:padding="@dimen/thick"
			android:textSize="@dimen/text_regular"/>

	</android.support.v7.widget.CardView>

	<android.support.v7.widget.AppCompatButton
		android:id="@+id/btn_submit"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/green"
		android:padding="@dimen/standard"
		android:text="@string/submit"
		android:textColor="@color/white"/>
</LinearLayout>
