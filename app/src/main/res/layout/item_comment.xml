<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingBottom="@dimen/narrow"
	android:paddingEnd="@dimen/standard"
	android:paddingStart="@dimen/standard"
	android:paddingTop="@dimen/narrow"
	tools:ignore="MissingPrefix">

	<de.hdodenhof.circleimageview.CircleImageView
		android:id="@+id/iv_avatar"
		android:layout_width="64dp"
		android:layout_height="64dp"
		tools:src="@mipmap/ic_launcher"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingStart="@dimen/standard"
		android:paddingTop="@dimen/narrow">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tv_name"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:ellipsize="end"
				android:lines="1"
				android:paddingEnd="@dimen/standard"
				android:textColor="@color/black"
				android:textSize="@dimen/text_medium"
				tools:text="Samuel Robert"/>

			<com.github.curioustechizen.ago.RelativeTimeTextView
				android:id="@+id/tv_time"
				fontPath="fonts/lato-regular.ttf"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/grey_848484"
				android:textSize="@dimen/text_small"
				tools:text="1 HOUR AGO"/>
		</LinearLayout>

		<TextView
			android:id="@+id/tv_comment"
			fontPath="fonts/lato-regular.ttf"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="@dimen/thick"
			android:textSize="@dimen/text_small"
			tools:text="It is long established fact that a reader will be distracted by the content of a page when looking at its design"/>
	</LinearLayout>
</LinearLayout>