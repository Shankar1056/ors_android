<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="@dimen/narrow"
	android:layout_marginEnd="@dimen/standard"
	android:layout_marginStart="@dimen/standard"
	android:layout_marginTop="@dimen/narrow"
	android:background="@color/white"
	android:gravity="center_vertical"
	android:orientation="horizontal"
	android:paddingBottom="@dimen/thick"
	android:paddingEnd="@dimen/narrow"
	android:paddingStart="@dimen/narrow"
	android:paddingTop="@dimen/thick">

	<ImageView
		android:id="@+id/iv_icon"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:background="@drawable/selector_green"
		android:contentDescription="@string/content_description"
		tools:src="@drawable/ic_aluminum_maroon_24dp"/>

	<TextView
		android:id="@+id/tv_title"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/narrow"
		android:layout_marginStart="@dimen/narrow"
		android:layout_weight="1"
		android:padding="@dimen/narrow"
		android:textColor="@color/black"
		tools:text="Aluminium"/>

	<TextView
		android:id="@+id/tv_price"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/black"
		tools:text="RS. 20.00/kg"/>
</LinearLayout>