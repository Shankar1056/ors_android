<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="online.ors.oldraddisold.activity.IllegalDumpActivity">

	<include layout="@layout/toolbar"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:padding="@dimen/standard"
		android:text="@string/msg_illegal_dump"
		android:textColor="@color/black"/>

	<View
		android:layout_width="94dp"
		android:layout_height="0.5dp"
		android:layout_gravity="center_horizontal"
		android:background="@color/black"/>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/rv_illegal_dump"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/standard"
		android:layout_marginStart="@dimen/standard"
		android:layout_marginTop="@dimen/dimen_28"
		app:layoutManager="GridLayoutManager"
		app:spanCount="3"
		tools:listitem="@layout/item_illegal_dumping"/>

	<android.support.v7.widget.AppCompatEditText
		android:id="@+id/et_desc"
		style="@style/EditText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="0dp"
		android:layout_marginStart="0dp"
		android:layout_marginTop="@dimen/dimen_28"
		android:background="@drawable/et_desc_bg"
		android:hint="@string/enter_desc_here"
		android:textColorHint="@color/grey_545454"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>

	<android.support.v7.widget.AppCompatButton
		android:id="@+id/btn_submit"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/colorPrimary"
		android:paddingBottom="@dimen/standard"
		android:paddingTop="@dimen/standard"
		android:text="@string/submit"
		android:textAllCaps="false"
		android:textColor="@color/white"
		android:textSize="@dimen/text_btn"/>

</LinearLayout>
